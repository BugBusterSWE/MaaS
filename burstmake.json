{
    "common": {
	"compilerOptions": {
	    "moduleResolution" : "node",
	    "target": "es5",
	    "declaration": false,
	    "noImplicitAny": false,
	    "noEmitOnError": true,
	    "sourceMap": true
	}
    },

    "src": {
	"compilerOptions": {
	    "outDir": "./dist/"
	},
	"base": "common"
    },

    "srcFrontend": {
	"compilerOptions": {
	    "module": "amd",
	    "jsx": "react"
        },
	"include": [
	    "src/public/typings/browser.d.ts"
        ],
	"exclude": [
	    "typings",
	    "*.json"
        ],
	"base": "src"
    },

    "srcBackend": {
	"compilerOptions": {
	    "module": "commonjs"
        },
	"include": [
	    "typings/main.d.ts"
        ],
        "exclude": [
            "public",
	    "*.json"
        ],
	"base": "src"
    },

    "test": {
	"base": "common"
    },

    "testBackend": {
	"compilerOptions": {
	    "module": "commonjs"
        },
        "include": [
	    "typings/main.d.ts"
        ],
        "exclude": [
            "public"
        ],
        "base": "test"
    },

    "testFrontend": {
	"compilerOptions": {
	    "module": "commonjs"
        },
        "include": [
	    "typings/browser.d.ts"
        ],
        "base": "test"
    },

    "hotpoint": {
	"srcBackend": "./src/",
	"srcFrontend": "./src/public/",
	"testBackend": "./test/",
	"testFrontend": "./test/public/"
    }
}

