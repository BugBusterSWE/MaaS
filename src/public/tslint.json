{
  "rules" : {
  "member-access": false,
  "member-ordering": [
    true,
    "public-before-private",
    "variables-before-functions"
   ],
   "no-any": true,
   "no-inferrable-types": false,
   "no-internal-module": true,
   "no-var-requires": true,
   "typedef" : [
     true,
     "call-signature",
     "parameter",
     "arrow-parameter",
     "property-declaration",
     "variable-declaration"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "onespace",
        "index-signature": "onespace",
        "parameter": "onespace",
        "property-declaration": "onespace",
        "variable-declaration": "onespace"
      }
    ],
    "curly": true,
    "forin": false,
    "label-position": false,
    "label-undefined": false,
    "no-arg": false,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-console": false,
    "no-construct": false,
    "no-debugger": false,
    "no-duplicate-key": true,
    "no-duplicate-variable": true,
    "no-empty": true,
    "no-eval": true,
    "no-null-keyword": true,
    "no-shadowed-variable": false,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-unreachable": true,
    "no-unused-expression": true,
    "no-unused-variable": false,
    "no-use-before-declare": true,
    "no-var-keyword": true,
    "radix": false,
    "switch-default": true,
    "triple-equals": false,
    "use-strict": [
      true,
      "check-module"
    ],
    "eofline": true,
    "indent": [
      true,
      "spaces"
    ],
    "max-line-length": [
      true,
      80
    ],
    "no-require-imports": true,
    "no-trailing-whitespace": true,
    "object-literal-sort-keys": false,
    "trailing-comma": [
      true,
      "multiline"
    ],
    "align": [
      true,
      "statements"
    ],
    "class-name": true,
    "comment-format": [
      true,
      "check-space",
      "check-uppercase"
    ],
    "interface-name": false,
    "jsdoc-format": true,
    "no-consecutive-blank-lines": false,
    "no-constructor-vars": false,
    "one-line": [
      true,
      "check-catch",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [
      true,
      "double",
      "avoid-escape"
    ],
    "semicolon": [
      true,
      "alaways"
    ],
    "variable-name": [
      true,
      "ban-keywords"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type",
      "check-typecast"
    ]
  }
}
